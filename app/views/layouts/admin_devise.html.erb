<!DOCTYPE html>
<html>
  <head>
    <title>TimeToAnswer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag    'application' %>
    <%= stylesheet_link_tag    'admin_devise' %>

  </head>

    <body>

        <div class="container">

            <%= yield %>

        </div>

        <%= javascript_include_tag 'application' %>
        <%= javascript_include_tag 'admin_devise' %>

        <% if flash %>

            <% flash.each do |key, value| %>

                <script>

                    $.bootstrapGrowl('<%= value %>', {

                        type: 'danger',
                        align: 'right', 
                        allow_dismiss: true,
                        stackup_spacing: 10 

                    });

                </script>

            <% end %>
    
        <% end %>       
    </body>

</html>
